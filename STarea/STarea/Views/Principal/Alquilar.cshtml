@model STarea.Models.Casa

@{
    ViewData["Title"] = "Alquilar Casa";
}

<h2>Alquilar Casa</h2>

@if (ViewBag.Mensaje != null)
{
    <div class="alert alert-danger">
        @ViewBag.Mensaje
    </div>
}

<form asp-action="Alquilar" method="post">
    <div class="form-group">
        <label for="IdCasa">Seleccione una casa</label>
        <select asp-for="IdCasa" class="form-control" asp-items="ViewBag.Casas">
            <option value="">-- Seleccione una casa --</option>
        </select>
    </div>

    <div class="form-group mt-3">
        <label for="UsuarioAlquiler">Usuario que alquila</label>
        <input asp-for="UsuarioAlquiler" class="form-control" placeholder="Ingrese el usuario" />
    </div>

    <button type="submit" class="btn btn-primary mt-3">Alquilar</button>
</form>
