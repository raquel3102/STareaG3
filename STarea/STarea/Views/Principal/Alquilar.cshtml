@model STarea.Models.Casa
@{
    ViewData["Title"] = "Alquilar Casa";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8">
            <!-- Progress indicator -->
            <div class="d-flex justify-content-center align-items-center mb-4">
                <div class="d-flex align-items-center">
                    <div class="bg-primary text-white rounded-circle d-flex align-items-center justify-content-center" style="width: 40px; height: 40px;">
                        <span class="fw-bold">1</span>
                    </div>
                    <small class="text-primary ms-2 me-3 fw-semibold">Selección</small>
                    <div class="bg-secondary" style="width: 60px; height: 2px;"></div>
                    <div class="bg-light border rounded-circle d-flex align-items-center justify-content-center ms-3 me-2" style="width: 40px; height: 40px;">
                        <span class="text-muted fw-bold">2</span>
                    </div>
                    <small class="text-muted fw-semibold">Confirmación</small>
                </div>
            </div>

            <div class="card shadow-lg border-0 rounded-4">
                <!-- Header mejorado -->
                <div class="card-header bg-primary text-white text-center py-4 border-0">
                    <div class="mb-3">
                        <div class="bg-white bg-opacity-25 rounded-circle d-inline-flex align-items-center justify-content-center p-3">
                            <i class="fas fa-home fs-2"></i>
                        </div>
                    </div>
                    <h2 class="mb-2 fw-bold">Alquilar Casa</h2>
                    <p class="mb-0 opacity-75 fs-6">Complete el formulario para proceder con el alquiler</p>
                </div>

                <div class="card-body p-4">
                    @if (ViewBag.Mensaje != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show border-0 rounded-3 mb-4" role="alert">
                            <div class="d-flex align-items-start">
                                <div class="me-3">
                                    <i class="fas fa-exclamation-triangle fs-5"></i>
                                </div>
                                <div class="flex-grow-1">
                                    <div class="fw-semibold mb-1">¡Atención!</div>
                                    <div>@ViewBag.Mensaje</div>
                                </div>
                            </div>
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }

                    <form asp-action="Alquilar" method="post">
                        <!-- Casa Selection -->
                        <div class="mb-4">
                            <label for="IdCasa" class="form-label fw-semibold text-dark d-flex align-items-center">
                                <i class="fas fa-building text-primary me-2"></i>
                                Selecciona tu propiedad
                            </label>
                            <select asp-for="IdCasa" class="form-select form-select-lg border-2 rounded-3" id="IdCasa" asp-items="ViewBag.Casas" required>
                                <option value="">Explora nuestras propiedades disponibles</option>
                            </select>
                            <div class="form-text text-muted mt-2">
                                <i class="fas fa-info-circle text-primary me-1"></i>
                                Elige entre nuestras propiedades verificadas y disponibles
                            </div>
                        </div>

                        <!-- Usuario field -->
                        <div class="mb-4">
                            <label for="UsuarioAlquiler" class="form-label fw-semibold text-dark d-flex align-items-center">
                                <i class="fas fa-user text-primary me-2"></i>
                                Información del inquilino
                            </label>
                            <input asp-for="UsuarioAlquiler"
                                   class="form-control form-control-lg border-2 rounded-3"
                                   id="UsuarioAlquiler"
                                   placeholder="Ej: juan.perez"
                                   autocomplete="username"
                                   required />
                            <div class="form-text text-muted mt-2">
                                <i class="fas fa-info-circle text-primary me-1"></i>
                                Ingresa el nombre de usuario del inquilino
                            </div>
                        </div>

                        <!-- Submit button -->
                        <div class="d-grid gap-2 mt-4">
                            <button type="submit" class="btn btn-primary btn-lg py-3 rounded-3 fw-semibold">
                                <i class="fas fa-key me-2"></i>
                                Procesar Alquiler
                            </button>
                        </div>
                    </form>
                </div>

                <!-- Footer mejorado -->
                <div class="card-footer bg-light border-0 text-center py-4">
                    <div class="mb-2">
                        <small class="text-muted fw-semibold d-flex align-items-center justify-content-center">
                            <i class="fas fa-info-circle text-primary me-2"></i>
                            Asegúrese de completar todos los campos requeridos
                        </small>
                    </div>
                    <div class="d-flex justify-content-center gap-4 flex-wrap mt-3">
                        <small class="text-muted d-flex align-items-center">
                            <i class="fas fa-shield-alt text-success me-2"></i>
                            <span class="fw-semibold">Proceso seguro</span>
                        </small>
                        <small class="text-muted d-flex align-items-center">
                            <i class="fas fa-clock text-warning me-2"></i>
                            <span class="fw-semibold">Confirmación inmediata</span>
                        </small>
                        <small class="text-muted d-flex align-items-center">
                            <i class="fas fa-headset text-info me-2"></i>
                            <span class="fw-semibold">Soporte 24/7</span>
                        </small>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>