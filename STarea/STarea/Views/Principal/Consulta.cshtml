@model List<STarea.Models.ConsultaModel>

@{
    ViewData["Title"] = "Consulta";
}

<h2 class="mt-4 mb-3">Consulta de Productos</h2>

<table id="example" class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>#</th>
            <th>Precio</th>
            <th>Saldo</th>
            <th>Descripción</th>
            <th>Estado</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id_Compra</td>
                <td>$@item.Precio.ToString("N2")</td>
                <td>$@item.Saldo.ToString("N2")</td>
                <td>@item.Descripcion</td>
                <td>@item.Estado</td>
            </tr>
        }
    </tbody>
</table>

<div class="mt-4 text-left">
    <a asp-action="Index" asp-controller="Principal">
        <i class="fa fa-backward fa-2x"></i>
    </a>
</div>

<script src="~/Templates/js/jquery.min.js"></script>
<script src="https://cdn.datatables.net/2.0.3/js/dataTables.min.js"></script>
<link href="https://cdn.datatables.net/2.0.3/css/dataTables.dataTables.min.css" rel="stylesheet" />

<script>
    $(document).ready(function () {
        new DataTable('#example', {
            language: {
                url: '//cdn.datatables.net/plug-ins/2.2.2/i18n/es-ES.json'
            },
            columnDefs: [
                { className: "dt-left", targets: "_all" }
            ]
        });
    });
</script>