@model List<Casa>
@{
    Layout = "_Layout";
}

<div class="container-fluid mt-4">
    <div class="row justify-content-center">
        <div class="col-12">
            <div class="card shadow-lg border-0 rounded-4">
                <!-- Header mejorado -->
                <div class="card-header bg-primary text-white border-0 py-4">
                    <div class="d-flex align-items-center justify-content-between">
                        <div class="d-flex align-items-center">
                            <div class="bg-white bg-opacity-25 rounded-circle d-flex align-items-center justify-content-center me-3" style="width: 50px; height: 50px;">
                                <i class="fas fa-list-alt fs-4"></i>
                            </div>
                            <div>
                                <h4 class="card-title mb-1 fw-bold">Consulta de Casas</h4>
                                <p class="mb-0 opacity-75 fs-6">Gestión y seguimiento de propiedades</p>
                            </div>
                        </div>
                        <div class="d-flex align-items-center gap-3">
                            <div class="d-flex align-items-center text-white bg-white bg-opacity-25 rounded-pill px-3 py-2">
                                <i class="fas fa-home me-2"></i>
                                <span class="fw-semibold">@Model.Count() Propiedades</span>
                            </div>
                        </div>
                    </div>
                </div>

                <hr class="my-0">

                <input id="Mensaje" type="hidden" value="@ViewBag.Mensaje" />

                <!-- Filtros y búsqueda -->
                <div class="card-body bg-light py-3">
                    <div class="row align-items-center">
                        <div class="col-md-6">
                            <div class="input-group">
                                <span class="input-group-text bg-white border-2">
                                    <i class="fas fa-search text-primary"></i>
                                </span>
                                <input type="text" class="form-control border-2" placeholder="Buscar por descripción, usuario..." id="searchInput">
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="d-flex gap-2 justify-content-md-end mt-2 mt-md-0">
                                <select class="form-select border-2" id="statusFilter" style="max-width: 200px;">
                                    <option value="">Todos los estados</option>
                                    <option value="disponible">Disponibles</option>
                                    <option value="reservada">Reservadas</option>
                                </select>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="card-body p-0">
                    <!-- Estadísticas rápidas -->
                    <div class="row g-0 border-bottom">
                        <div class="col-md-4">
                            <div class="p-3 text-center border-end">
                                <div class="d-flex align-items-center justify-content-center mb-2">
                                    <i class="fas fa-check-circle text-success fs-4 me-2"></i>
                                    <span class="h5 mb-0 fw-bold text-success">@Model.Count(c => !c.Estado)</span>
                                </div>
                                <small class="text-muted fw-semibold">Disponibles</small>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="p-3 text-center border-end">
                                <div class="d-flex align-items-center justify-content-center mb-2">
                                    <i class="fas fa-clock text-warning fs-4 me-2"></i>
                                    <span class="h5 mb-0 fw-bold text-warning">@Model.Count(c => c.Estado)</span>
                                </div>
                                <small class="text-muted fw-semibold">Reservadas</small>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="p-3 text-center">
                                <div class="d-flex align-items-center justify-content-center mb-2">
                                    <i class="fas fa-dollar-sign text-primary fs-4 me-2"></i>
                                    <span class="h5 mb-0 fw-bold text-primary">$@Model.Where(c => c.Estado).Sum(c => c.PrecioCasa).ToString("N0")</span>
                                </div>
                                <small class="text-muted fw-semibold">Ingresos Activos</small>
                            </div>
                        </div>
                    </div>

                    <!-- Tabla mejorada -->
                    <div class="table-responsive">
                        <table id="tablaDatos" class="table table-hover mb-0">
                            <thead class="bg-light">
                                <tr>
                                    <th class="border-0 py-3 fw-semibold text-dark">
                                        <i class="fas fa-home text-primary me-2"></i>
                                        Descripción
                                    </th>
                                    <th class="border-0 py-3 fw-semibold text-dark">
                                        <i class="fas fa-dollar-sign text-success me-2"></i>
                                        Precio
                                    </th>
                                    <th class="border-0 py-3 fw-semibold text-dark">
                                        <i class="fas fa-user text-info me-2"></i>
                                        Usuario
                                    </th>
                                    <th class="border-0 py-3 fw-semibold text-dark">
                                        <i class="fas fa-flag text-warning me-2"></i>
                                        Estado
                                    </th>
                                    <th class="border-0 py-3 fw-semibold text-dark">
                                        <i class="fas fa-calendar text-secondary me-2"></i>
                                        Fecha de Alquiler
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr class="align-middle">
                                        <td class="py-3">
                                            <div class="d-flex align-items-center">
                                                <div class="bg-primary bg-opacity-10 rounded-circle d-flex align-items-center justify-content-center me-3" style="width: 40px; height: 40px;">
                                                    <i class="fas fa-building text-primary"></i>
                                                </div>
                                                <div>
                                                    <div class="fw-semibold text-dark">@item.DescripcionCasa</div>
                                                    @if (!string.IsNullOrEmpty(item.UsuarioAlquiler))
                                                    {
                                                        <small class="text-muted">Alquilada por: @item.UsuarioAlquiler</small>
                                                    }
                                                    else
                                                    {
                                                        <small class="text-success">Propiedad disponible</small>
                                                    }
                                                </div>
                                            </div>
                                        </td>
                                        <td class="py-3">
                                            <span class="badge bg-success bg-opacity-10 text-success fs-6 fw-semibold px-3 py-2 rounded-pill">
                                                $@item.PrecioCasa.ToString("N2")
                                            </span>
                                        </td>
                                        <td class="py-3">
                                            @if (!string.IsNullOrEmpty(item.UsuarioAlquiler))
                                            {
                                                <div class="d-flex align-items-center">
                                                    <div class="bg-info bg-opacity-10 rounded-circle d-flex align-items-center justify-content-center me-2" style="width: 32px; height: 32px;">
                                                        <i class="fas fa-user text-info"></i>
                                                    </div>
                                                    <span class="fw-semibold text-dark">@item.UsuarioAlquiler</span>
                                                </div>
                                            }
                                            else
                                            {
                                                <span class="text-muted fst-italic">Sin asignar</span>
                                            }
                                        </td>
                                        <td class="py-3">
                                            @if (item.Estado)
                                            {
                                                <span class="badge bg-warning text-dark fw-semibold px-3 py-2 rounded-pill">
                                                    <i class="fas fa-clock me-1"></i>
                                                    Reservada
                                                </span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-success fw-semibold px-3 py-2 rounded-pill">
                                                    <i class="fas fa-check-circle me-1"></i>
                                                    Disponible
                                                </span>
                                            }
                                        </td>
                                        <td class="py-3">
                                            @if (item.FechaAlquiler != default(DateTime))
                                            {
                                                <div class="d-flex align-items-center">
                                                    <i class="fas fa-calendar-alt text-primary me-2"></i>
                                                    <div>
                                                        <div class="fw-semibold text-dark">@item.FechaAlquiler.ToString("dd/MM/yyyy")</div>
                                                        <small class="text-muted">@item.FechaAlquiler.ToString("dddd", new System.Globalization.CultureInfo("es-ES"))</small>
                                                    </div>
                                                </div>
                                            }
                                            else
                                            {
                                                <span class="text-muted fst-italic">
                                                    <i class="fas fa-minus me-1"></i>
                                                    No definida
                                                </span>
                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>

                <hr class="my-0">

                <!-- Footer informativo -->
                <div class="card-footer bg-light border-0 py-3">
                    <div class="d-flex justify-content-between align-items-center flex-wrap">
                        <div class="d-flex align-items-center gap-3">
                            <small class="text-muted fw-semibold">
                                <i class="fas fa-info-circle text-primary me-1"></i>
                                Mostrando @Model.Count() propiedades
                            </small>
                            <small class="text-muted">
                                <i class="fas fa-sync-alt text-success me-1"></i>
                                Última actualización: @DateTime.Now.ToString("dd/MM/yyyy HH:mm")
                            </small>
                        </div>
                        <div class="d-flex align-items-center gap-2">
                            <button class="btn btn-outline-primary btn-sm rounded-pill" onclick="location.reload()">
                                <i class="fas fa-refresh me-1"></i>
                                Actualizar
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        const searchInput = document.getElementById('searchInput');
        const statusFilter = document.getElementById('statusFilter');
        const tableRows = document.querySelectorAll('#tablaDatos tbody tr');

        function filterTable() {
            const searchTerm = searchInput.value.toLowerCase();
            const statusValue = statusFilter.value.toLowerCase();

            tableRows.forEach(row => {
                const description = row.cells[0].textContent.toLowerCase();
                const user = row.cells[2].textContent.toLowerCase();
                const status = row.cells[3].textContent.toLowerCase();

                const matchesSearch = description.includes(searchTerm) || user.includes(searchTerm);
                const matchesStatus = statusValue === '' || status.includes(statusValue);

                if (matchesSearch && matchesStatus) {
                    row.style.display = '';
                    row.style.animation = 'fadeIn 0.3s ease-in';
                } else {
                    row.style.display = 'none';
                }
            });
        }

        searchInput.addEventListener('input', filterTable);
        statusFilter.addEventListener('change', filterTable);
    });
</script>