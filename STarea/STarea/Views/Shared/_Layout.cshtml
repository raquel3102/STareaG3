<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - STarea</title>

    <!-- Bootstrap y estilos base -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/STarea.styles.css" asp-append-version="true" />

    <!-- Estilos personalizados -->
    <link href="~/Templates/css/styles.css" rel="stylesheet" asp-append-version="true" />
    <link href="https://cdn.datatables.net/2.2.2/css/dataTables.bootstrap4.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet" />

    <style>
        body {
            background-color: #f8f9fa;
        }

        .navbar-dark {
            background: linear-gradient(90deg, #343a40, #495057);
        }

        .sb-sidenav {
            background-color: #ffffff;
            border-right: 1px solid #dee2e6;
        }

            .sb-sidenav .nav-link {
                color: #495057;
                transition: background-color 0.3s ease;
            }

                .sb-sidenav .nav-link:hover {
                    background-color: #e9ecef;
                    color: #212529;
                }

        .sb-nav-link-icon {
            color: #0d6efd;
        }

        footer.bg-light {
            background-color: #e9ecef !important;
        }

        .container-fluid h1, .container-fluid h2 {
            color: #0d6efd;
        }
    </style>

    @RenderSection("Styles", required: false)
</head>
<body>
    <!-- Barra superior -->
    <nav class="sb-topnav navbar navbar-expand navbar-dark">
        <a class="navbar-brand ps-3" asp-controller="Principal" asp-action="Index">STarea</a>
        <button class="btn btn-link btn-sm order-1 order-lg-0 me-4 me-lg-0" id="sidebarToggle"><i class="fas fa-bars"></i></button>
    </nav>

    <div id="layoutSidenav">
        <!-- Navegación lateral -->
        <div id="layoutSidenav_nav">
            <nav class="sb-sidenav accordion" id="sidenavAccordion">
                <div class="sb-sidenav-menu">
                    <div class="nav flex-column">
                        <a class="nav-link" asp-controller="Principal" asp-action="Index">
                            <div class="sb-nav-link-icon"><i class="fas fa-home"></i></div>
                            Inicio
                        </a>
                        <a class="nav-link" asp-controller="Abono" asp-action="Registro">
                            <div class="sb-nav-link-icon"><i class="fas fa-wallet"></i></div>
                            Registrar Abono
                        </a>
                        <a class="nav-link" asp-controller="Principal" asp-action="Consulta">
                            <div class="sb-nav-link-icon"><i class="fas fa-table-search"></i></div>
                            Consulta
                        </a>
                    </div>
                </div>
            </nav>
        </div>

        <!-- Contenido principal -->
        <div id="layoutSidenav_content">
            <main>
                <div class="container-fluid px-4 py-4">
                    @RenderBody()
                </div>
            </main>

            <!-- Pie de página -->
            <footer class="py-4 bg-light mt-auto">
                <div class="container-fluid px-4">
                    <div class="d-flex align-items-center justify-content-between small">
                        <div class="text-muted">&copy; 2025 - STarea</div>
                        <div>
                            <a asp-controller="Home" asp-action="Privacy">Privacidad</a>
                            &middot;
                            <a href="#">Términos y condiciones</a>
                        </div>
                    </div>
                </div>
            </footer>
        </div>
    </div>

    <!-- Scripts base -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <!-- Scripts personalizados -->
    <script src="https://cdn.datatables.net/2.2.2/js/dataTables.js"></script>
    <script src="https://cdn.datatables.net/2.2.2/js/dataTables.bootstrap4.js"></script>
    <script src="~/Templates/js/scripts.js" asp-append-version="true"></script>
    <script src="~/Templates/js/generales.js" asp-append-version="true"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>